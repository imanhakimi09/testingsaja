<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/teal_700"
    tools:context=".homepage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="Gym Equipments and Facilities"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Cardio Equipments"
                android:textColor="@color/white"
                />

            <ImageButton
                android:id="@+id/cardio"
                android:layout_width="350dp"
                android:layout_height="236dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:scaleType="fitXY"
                android:gravity="center"
                app:srcCompat="@drawable/cardio" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="Chest Equipments"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/chest"
                android:layout_width="350dp"
                android:layout_height="236dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:scaleType="fitXY"
                android:gravity="center"
                app:srcCompat="@drawable/chest1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="Back Equipments"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="350dp"
                android:layout_height="240dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:scaleType="fitXY"
                android:gravity="center"
                app:srcCompat="@drawable/back1" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="Legs equipments"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/legs"
                android:layout_width="350dp"
                android:layout_height="236dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:scaleType="fitXY"
                android:gravity="center"
                app:srcCompat="@drawable/legs1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:gravity="center"
                android:text="Arms equipments"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/arms"
                android:layout_width="350dp"
                android:layout_height="237dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:scaleType="fitXY"
                android:gravity="center"
                app:srcCompat="@drawable/arm1" />

            <ImageView
                android:id="@+id/empty"
                android:layout_width="wrap_content"
                android:layout_height="75dp" />


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        //this will be the button to navigate to each page

        <ImageButton
            android:id="@+id/directHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/directGym"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_baseline_run_circle_24" />

        <ImageButton
            android:id="@+id/directQR"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_baseline_add_circle_24" />

        <ImageButton
            android:id="@+id/directPlan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_baseline_menu_book_24" />

        <ImageButton
            android:id="@+id/directShop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_outline_shopping_cart_24" />

    </LinearLayout>

</RelativeLayout>