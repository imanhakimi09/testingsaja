<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".viewWorkoutPlanner">

    <TextView
        android:id="@+id/backTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Back"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Workout Planer"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wkTypeTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#D7D9D9"
        android:padding="20dp"
        android:text="Workout Type: "
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/wkNameTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wkTypeTextview"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:background="#D7D9D9"
        android:text="Workout Name: "
        android:padding="20dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/RepsTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wkNameTextview"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:background="#D7D9D9"
        android:text="Workout Reps: "
        android:padding="20dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/newWkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RepsTextview"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:text="Add New Plan"
        android:padding="10dp"
        android:textColor="@color/white" />

</RelativeLayout>